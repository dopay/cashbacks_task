<h1>Transaction History for <%= @account.name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.created_at.to_s(:short) %></td>
        <td><%= transaction.transaction_type.capitalize %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Account', user_account_path(@user, @account) %>